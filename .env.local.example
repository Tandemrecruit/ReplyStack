# =============================================================================
# Replily Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ACCESS_TOKEN=your-access-token

# -----------------------------------------------------------------------------
# Google OAuth / Business Profile API
# Get these from: https://console.cloud.google.com/apis/credentials
# Required scopes: business.manage
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Anthropic / Claude API
# Get this from: https://console.anthropic.com/settings/keys
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-api-key

# -----------------------------------------------------------------------------
# Stripe Payments
# Get these from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Stripe Product/Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_ID=price_your-price-id

# -----------------------------------------------------------------------------
# Resend Email
# Get this from: https://resend.com/api-keys
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=Replily <notifications@yourdomain.com>

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Cron Job Security (for Vercel Cron)
# Generate a random string: openssl rand -hex 32
# -----------------------------------------------------------------------------
CRON_SECRET=your-random-cron-secret

# -----------------------------------------------------------------------------
# Token Encryption (for Google refresh tokens at rest)
# Generate a 32-byte key:
#   Linux/macOS: openssl rand -hex 32
#   PowerShell:  -join ((1..32) | ForEach-Object { "{0:x2}" -f (Get-Random -Maximum 256) })
# CRITICAL: Back up this key securely - losing it will invalidate all stored tokens
# -----------------------------------------------------------------------------
TOKEN_ENCRYPTION_KEY=your-64-character-hex-key-here

# For key rotation, set the old key here temporarily while re-encrypting tokens:
# TOKEN_ENCRYPTION_KEY_OLD=previous-64-character-hex-key
